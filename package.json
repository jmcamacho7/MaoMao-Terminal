{
  "name": "maomao-terminal",
  "version": "1.0.4",
  "description": "A React-style terminal component library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Juan Manuel Camacho Sanchez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmcamacho7/maomao-terminal.git"
  },
  "keywords": [
    "react",
    "terminal",
    "component",
    "ui"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && shx mkdir -p dist/components dist/styles && shx cp src/components/*.css dist/components/ && shx cp src/styles/*.css dist/styles/",
    "watch": "concurrently \"tsc --watch\" \"cpx \\\"src/components/*.css\\\" dist/components/ --watch\" \"cpx \\\"src/styles/*.css\\\" dist/styles/ --watch\"",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "concurrently": "^9.2.1",
    "cpx": "^1.5.0",
    "shx": "^0.4.0",
    "typescript": "^5.0.0"
  }
}